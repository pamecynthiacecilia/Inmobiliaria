@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       
        <form asp-action="Create" asp-route-id="IdContrato">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NroPago" class="control-label"></label>
                <input asp-for="NroPago" class="form-control" />
                <span asp-validation-for="NroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaP" class="control-label"></label>
                <input asp-for="FechaP" class="form-control" />
                <span asp-validation-for="FechaP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe"  class="form-control " />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label">Nro Contrato</label>
                <input asp-for="IdContrato" value="@ViewBag.Contratos" class="form-control" />
                <span asp-validation-for="IdContrato" class="text-danger"></span>

            </div>

            <div class="form-group">

                <input type="submit" value="Guardar" class="btn btn-primary" />

                <a asp-action="Index"><input type="button" value="Volver" class="btn btn-primary" /></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
