@model IEnumerable<Inmobiliaria.Models.Propietario>
@{
    ViewData["Title"] = "Index";
    List<Propietario> propietario = ViewData[nameof(Propietario)] as List<Propietario>;
}


    <h1>Propietarios</h1>

    <p>
        <a asp-action="Create" style="text-decoration:none"><span><i class="bi bi-person-plus-fill"></i></span> Nuevo Propietario</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                
                <th>
                    @Html.DisplayNameFor(model => model.Dni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in propietario)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" title="Detalles"><span> <i class="bi bi-card-list"></i></span></a> &nbsp &nbsp
                        <a asp-action="Edit" asp-route-id="@item.Id" title="Editar"><span> <i class="bi bi-pencil"></i></span></a> &nbsp &nbsp
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><span><i class="bi bi-trash"></i></span></a>
                        <a asp-action="InmueblesPorPropietario" asp-controller="Inmueble"asp-route-id="@item.Id" title="Inmuebles del Propietario"><span><i class="bi bi-house-fill"></i> </span></a> &nbsp &nbsp
                    </td>
                </tr>
            }
        </tbody>
    </table>


